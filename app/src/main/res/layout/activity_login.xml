<?xml version="1.0" encoding="utf-8"?>
<!-- Relative layout as parent layout-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PincodeActivity">

    <!-- Code from https://github.com/hanks-zyh/PasscodeView -->
    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/pview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brown_700"
        app:correctStateColor="#71bb4d"
        app:firstInputTip="Enter a passcode of 5 digits\npassword is 77777 "
        app:normalStateColor="@color/whitebg"
        app:numberTextColor="@color/darkbg"
        app:passcodeLength="5"
        app:passcodeViewType="set_passcode"
        app:wrongStateColor="#ea2b46" />

</RelativeLayout>